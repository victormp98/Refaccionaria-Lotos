<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lotos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        /* Ajuste rápido para botones en PC */
        .nav-pc-link {
            font-weight: 600;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            transition: all 0.2s;
        }

            .nav-pc-link:hover {
                background-color: #f8f9fa;
                color: #2E86C1 !important;
            }
    </style>
</head>
<body class="bg-light">
    <header class="sticky-top shadow-sm">
        <nav class="navbar navbar-light bg-white py-2">
            <div class="container-fluid px-3">
                <a class="navbar-brand fw-bold fs-3" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-gear-wide-connected text-primary"></i> Lotos
                </a>

                <div class="flex-grow-1 mx-2 mx-md-4">
                    <form asp-controller="Home" asp-action="Index" method="get" class="d-flex rounded-pill overflow-hidden border bg-light w-100">
                        <input name="searchString" class="form-control border-0 bg-transparent px-3 py-2" type="search" placeholder="Buscar refacciones...">
                        <button class="btn border-0 text-muted" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>

                <div class="d-flex align-items-center">
                    <div class="d-none d-lg-flex me-2">
                        <a class="nav-link text-dark nav-pc-link" asp-controller="Home" asp-action="Index">Tienda</a>
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Cliente"))
                        {
                            <a class="nav-link text-dark nav-pc-link" asp-controller="Productos" asp-action="Index">Inventario</a>
                            <a class="nav-link text-dark nav-pc-link" asp-controller="Vehiculos" asp-action="Index">Autos</a>
                        }
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mb-5 mt-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div class="nav-mobile-bottom d-lg-none">
        <a asp-controller="Home" asp-action="Index" class="nav-mobile-item">
            <i class="bi bi-house"></i><span>Inicio</span>
        </a>

        @if (User.IsInRole("Cliente") || !User.Identity.IsAuthenticated)
        {
            <a asp-controller="Carrito" asp-action="Index" class="nav-mobile-item position-relative">
                <i class="bi bi-cart3"></i><span>Carrito</span>
                @{
                    var c = Context.Session.GetObject<List<RefaccionariaWeb.Models.DTOs.ItemCarrito>>("Carrito");
                    var t = c?.Sum(x => x.Cantidad) ?? 0;
                }
                @if (t > 0)
                {
                    <span class="position-absolute top-0 start-60 badge rounded-pill bg-danger" style="font-size:0.6rem">@t</span>
                }
            </a>
            <a href="#" class="nav-mobile-item"><i class="bi bi-bag-check"></i><span>Pedidos</span></a>
        }
        else
        {
            <a asp-controller="Productos" asp-action="Index" class="nav-mobile-item">
                <i class="bi bi-box-seam"></i><span>Stock</span>
            </a>
            <a asp-controller="Vehiculos" asp-action="Index" class="nav-mobile-item">
                <i class="bi bi-car-front"></i><span>Autos</span>
            </a>
        }

        <div class="dropup nav-mobile-item">
            <a href="#" class="nav-mobile-item" data-bs-toggle="dropdown"><i class="bi bi-list"></i><span>Menú</span></a>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-4">
                @if (User.IsInRole("Admin"))
                {
                    <li><a class="dropdown-item py-2" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-people me-2"></i> Personal</a></li>
                }
                <li><a class="dropdown-item py-2" asp-controller="Home" asp-action="Index"><i class="bi bi-shop me-2"></i> Catálogo</a></li>
                <hr class="dropdown-divider">
                <li><partial name="_LoginPartial" /></li>
            </ul>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @* FUNDAMENTAL: ESTO EVITA EL ERROR DE SCRIPTS SECTIONS *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>