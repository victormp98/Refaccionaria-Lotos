<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Refaccionaria Lotos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        :root {
            --primary-blue: #1B2631; /* Azul Profundo */
            --electric-blue: #2E86C1; /* Azul Acción */
        }

        .navbar-custom {
            background-color: white;
            border-bottom: 2px solid #f8f9fa;
        }

        .nav-link {
            color: var(--primary-blue) !important;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: var(--electric-blue) !important;
            }

        .btn-primary {
            background-color: var(--electric-blue);
            border: none;
        }

            .btn-primary:hover {
                background-color: #21618C;
            }
    </style>
</head>
<body class="bg-light bg-opacity-50">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-custom shadow-sm py-3">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-bold fs-3" asp-controller="Home" asp-action="Index">
                    <span style="color: var(--primary-blue)">Refaccionaria</span><span style="color: var(--electric-blue)">Lotos</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 mt-3 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill opacity-50 me-1"></i> Catálogo
                            </a>
                        </li>

                        @if (User.IsInRole("Admin") || User.IsInRole("Almacen") || User.IsInRole("Mostrador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold" asp-controller="Productos" asp-action="Index">
                                    <i class="bi bi-box-seam-fill text-warning me-1"></i> Inventario
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold" asp-controller="Vehiculos" asp-action="Index">
                                    <i class="bi bi-car-front-fill opacity-50 me-1"></i> Vehículos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold text-danger" asp-controller="Usuarios" asp-action="Index">
                                    <i class="bi bi-people-fill me-1"></i> Personal
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-lg-center border-top border-lg-0 pt-3 pt-lg-0">
                        @if (!User.IsInRole("Admin") && !User.IsInRole("Almacen"))
                        {
                            <li class="nav-item me-lg-4 mb-3 mb-lg-0">
                                <a class="nav-link position-relative d-flex align-items-center text-primary" asp-controller="Carrito" asp-action="Index">
                                    <i class="bi bi-cart4 fs-4"></i>
                                    <span class="ms-2 fw-bold">Mi Carrito</span>
                                </a>
                            </li>
                        }
                        <div class="border-start d-none d-lg-block mx-2" style="height: 30px;"></div>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted border-top bg-white py-4 mt-auto">
        <div class="container text-center">
            <p class="mb-0">© 2026 - <span class="fw-bold">Refaccionaria Lotos</span> - Sistema de Gestión Profesional</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @* Mismos Scripts de SweetAlert que ya tenías *@
    <script>
        @if (TempData["AlertaCarrito"] != null)
        {
                <text>
                Swal.fire({
                    title: '¡Añadido!',
                    html: 'Agregaste <strong>@TempData["CantidadAgregada"]</strong> de @TempData["ProductoAgregado"]',
                    icon: 'success',
                    showCancelButton: true,
                    confirmButtonColor: '#28a745',
                    cancelButtonText: 'Seguir viendo',
                    confirmButtonText: 'Ir al carrito'
                }).then((result) => { if (result.isConfirmed) { window.location.href = '@Url.Action("Index", "Carrito")'; } });
                </text>
        }
    </script>
</body>
</html>