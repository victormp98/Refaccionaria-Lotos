<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lotos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .nav-pc-link {
            font-weight: 600;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            transition: 0.2s;
        }

            .nav-pc-link:hover {
                background: #f8f9fa;
                color: #2E86C1 !important;
            }
    </style>
</head>
<body class="bg-light">
    <header class="sticky-top shadow-sm">
        <nav class="navbar navbar-light bg-white py-2">
            <div class="container-fluid px-3">

                <div class="d-flex justify-content-between align-items-center w-100">
                    <a class="navbar-brand fw-bold fs-3" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-gear-wide-connected text-primary"></i> RefaccionariaUt
                    </a>
                    <div class="ms-auto text-end">
                        <partial name="_LoginPartial" />
                    </div>
                </div>

                <div class="row justify-content-center w-100 mt-2 mx-0">
                    <div class="col-12 col-lg-8 px-1">
                        <form asp-controller="Home" asp-action="Index" method="get" class="d-flex rounded-pill border bg-light w-100 overflow-hidden shadow-sm">
                            <input name="searchString" class="form-control border-0 bg-transparent px-3 py-2" type="search" placeholder="Buscar refacciones...">
                            <button class="btn border-0 text-muted" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    </div>
                </div>

                <div class="d-none d-lg-flex justify-content-center w-100 mt-2 border-top pt-2">
                    <a class="nav-link text-dark nav-pc-link" asp-controller="Home" asp-action="Index">Catálogo</a>
                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Cliente"))
                    {
                        <a class="nav-link text-dark nav-pc-link" asp-controller="Productos" asp-action="Index">Inventario</a>
                        <a class="nav-link text-dark nav-pc-link" asp-controller="Vehiculos" asp-action="Index">Vehículos</a>
                        <a class="nav-link text-dark nav-pc-link" asp-controller="Compatibilidades" asp-action="Index">Relaciones</a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link text-dark nav-pc-link" asp-controller="Usuarios" asp-action="Index">Personal</a>
                        }
                    }

                    @* AJUSTE AQUÍ: Solo muestra el carrito en Desktop si es Cliente *@
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Cliente"))
                    {
                        <a class="nav-link text-primary fs-5 px-3 position-relative" asp-controller="Carrito" asp-action="Index">
                            <i class="bi bi-cart3"></i>
                            @{
                                var cPC = Context.Session.GetObject<List<RefaccionariaWeb.Models.DTOs.ItemCarrito>>("Carrito");
                                var tPC = cPC?.Sum(x => x.Cantidad) ?? 0;
                            }
                            @if (tPC > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size:0.6rem">@tPC</span>
                            }
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid mb-5 mt-3">
        <main role="main">@RenderBody()</main>
    </div>

    <div class="nav-mobile-bottom d-lg-none">
        <a asp-controller="Home" asp-action="Index" class="nav-mobile-item">
            <i class="bi bi-house"></i><span>Inicio</span>
        </a>

        @if (User.IsInRole("Cliente") || !User.Identity.IsAuthenticated)
        {
            <a asp-controller="Carrito" asp-action="Index" class="nav-mobile-item position-relative">
                <i class="bi bi-cart3"></i><span>Carrito</span>
                @{
                    var tMob = Context.Session.GetObject<List<RefaccionariaWeb.Models.DTOs.ItemCarrito>>("Carrito")?.Sum(x => x.Cantidad) ?? 0;
                }
                @if (tMob > 0)
                {
                    <span class="position-absolute top-0 start-60 badge rounded-pill bg-danger" style="font-size:0.6rem">@tMob</span>
                }
            </a>
            <a href="#" class="nav-mobile-item"><i class="bi bi-bag-check"></i><span>Pedidos</span></a>
        }

        <div class="dropup nav-mobile-item">
            <a href="#" class="nav-mobile-item" data-bs-toggle="dropdown"><i class="bi bi-list"></i><span>Menú</span></a>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-4 p-3">
                <li class="border-bottom mb-2 pb-2 text-end"><strong>@User.Identity?.Name</strong></li>
                @if (User.Identity.IsAuthenticated && !User.IsInRole("Cliente"))
                {
                    <li><a class="dropdown-item py-2" asp-controller="Productos" asp-action="Index"><i class="bi bi-box-seam me-2"></i> Inventario</a></li>
                    <li><a class="dropdown-item py-2" asp-controller="Vehiculos" asp-action="Index"><i class="bi bi-car-front me-2"></i> Vehículos</a></li>
                    <li><a class="dropdown-item py-2" asp-controller="Compatibilidades" asp-action="Index"><i class="bi bi-diagram-3 me-2"></i> Relaciones</a></li>

                    @if (User.IsInRole("Admin"))
                    {
                        <li><a class="dropdown-item py-2" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-people me-2"></i> Personal</a></li>
                    }
                }
                <li><a class="dropdown-item py-2" asp-controller="Home" asp-action="Index"><i class="bi bi-shop me-2"></i> Catálogo</a></li>
                <hr>
                <li><partial name="_LoginPartial" /></li>
            </ul>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        @if (TempData["AlertaCarrito"] != null)
        {
                <text>
                    Swal.fire({
                        title: '¡Agregado!',
                        html: 'Añadiste <strong>@TempData["CantidadAgregada"]</strong> de:<br>@TempData["ProductoAgregado"]',
                        icon: 'success',
                        showCancelButton: true,
                        confirmButtonColor: '#2E86C1',
                        confirmButtonText: 'Ver Carrito',
                        cancelButtonText: 'Seguir viendo'
                    }).then((result) => { if (result.isConfirmed) { window.location.href = '@Url.Action("Index", "Carrito")'; } });
                </text>
        }
        @if (TempData["Error"] != null)
        {
                <text>
                    Swal.fire({ icon: 'warning', title: 'Atención', text: '@TempData["Error"]' });
                </text>
        }
    </script>
</body>
</html>