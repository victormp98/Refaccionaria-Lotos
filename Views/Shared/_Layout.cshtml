<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Refaccionaria Lotos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
    <header class="sticky-top">
        <nav class="navbar navbar-light bg-white border-bottom py-2">
            <div class="container-fluid px-3">
                <a class="navbar-brand fw-bold fs-3" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-gear-wide-connected text-primary"></i> Lotos
                </a>

                <div class="flex-grow-1 mx-2 mx-md-5">
                    <form class="d-flex shadow-sm rounded-pill overflow-hidden border bg-light">
                        <input class="form-control border-0 bg-transparent px-3" type="search" placeholder="Buscar piezas, marcas...">
                        <button class="btn btn-transparent text-muted" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>

                <div class="d-none d-lg-block border-start ps-3">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="nav-mobile-bottom">
        <a asp-controller="Home" asp-action="Index" class="nav-mobile-item">
            <i class="bi bi-house"></i>
            <span>Inicio</span>
        </a>

        <a asp-controller="Carrito" asp-action="Index" class="nav-mobile-item position-relative">
            <i class="bi bi-cart3"></i>
            <span>Carrito</span>
            @* Lógica para el contador de items *@
            @{
                var carrito = Context.Session.GetObject<List<RefaccionariaWeb.Models.DTOs.ItemCarrito>>("Carrito");
                var totalItems = carrito?.Sum(x => x.Cantidad) ?? 0;
            }
            @if (totalItems > 0)
            {
                <span class="position-absolute top-0 start-60 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                    @totalItems
                </span>
            }
        </a>

        <a href="#" class="nav-mobile-item">
            <i class="bi bi-bag-check"></i>
            <span>Pedidos</span>
        </a>

        <div class="dropup nav-mobile-item">
            <a href="#" class="nav-mobile-item" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-list"></i>
                <span>Menú</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow">
                <li class="px-3 py-2 border-bottom mb-2 bg-light rounded-top">
                    <small class="text-muted d-block">Hola,</small>
                    <strong class="text-dark">@User.Identity?.Name</strong>
                </li>
                <li><a class="dropdown-item py-2" asp-controller="Home" asp-action="Index"><i class="bi bi-shop me-2 text-primary"></i> Ir al Catálogo</a></li>

                @if (User.IsInRole("Admin") || User.IsInRole("Almacen") || User.IsInRole("Mostrador"))
                {
                    <li><a class="dropdown-item py-2" asp-controller="Productos" asp-action="Index"><i class="bi bi-box-seam me-2 text-warning"></i> Gestionar Inventario</a></li>
                }

                @if (User.IsInRole("Admin"))
                {
                    <li><a class="dropdown-item py-2" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-people me-2 text-danger"></i> Control de Personal</a></li>
                }
                <hr class="dropdown-divider">
                <li><partial name="_LoginPartial" /></li>
            </ul>
        </div>
    </div>

    <footer class="border-top footer text-muted d-none d-lg-block bg-white py-4 mt-5">
        <div class="container text-center">
            &copy; 2026 - Refaccionaria Lotos - Gestión de Autopartes
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @* Mismos scripts de SweetAlert que ya tenías *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["AlertaCarrito"] != null)
        {
                <text>
                Swal.fire({
                    title: '¡Agregado!',
                    html: 'Añadiste <strong>@TempData["CantidadAgregada"]</strong> pieza(s) de:<br>@TempData["ProductoAgregado"]',
                    icon: 'success',
                    showCancelButton: true,
                    confirmButtonColor: '#2E86C1',
                    cancelButtonText: 'Seguir comprando',
                    confirmButtonText: 'Ver Carrito'
                }).then((result) => { if (result.isConfirmed) { window.location.href = '@Url.Action("Index", "Carrito")'; } });
                </text>
        }
        @if (TempData["Error"] != null)
        {
                <text>
                Swal.fire({ icon: 'error', title: 'Aviso', text: '@TempData["Error"]' });
                </text>
        }
    </script>
</body>
</html>