<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lotos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
    <header class="sticky-top">
        <nav class="navbar navbar-light bg-white border-bottom py-2">
            <div class="container-fluid px-3">
                <a class="navbar-brand fw-bold fs-3" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-gear-wide-connected text-primary"></i> Lotos
                </a>

                <div class="flex-grow-1 mx-2 mx-md-5">
                    <form asp-controller="Home" asp-action="Index" method="get" class="d-flex shadow-sm rounded-pill overflow-hidden border bg-light">
                        <input name="searchString" class="form-control border-0 bg-transparent px-3" type="search" placeholder="¿Qué pieza buscas?">
                        <button class="btn btn-transparent text-muted" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>

                <div class="d-none d-lg-flex align-items-center">
                    <a class="nav-link text-dark px-3" asp-controller="Home" asp-action="Index">Catálogo</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-link text-dark px-3" asp-controller="Productos" asp-action="Index">Inventario</a>
                    }
                    <div class="border-start ps-3 ms-2">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="nav-mobile-bottom">
        <a asp-controller="Home" asp-action="Index" class="nav-mobile-item">
            <i class="bi bi-house"></i><span>Inicio</span>
        </a>

        <a asp-controller="Carrito" asp-action="Index" class="nav-mobile-item position-relative">
            <i class="bi bi-cart3"></i><span>Carrito</span>
            @{
                var total = Context.Session.GetObject<List<RefaccionariaWeb.Models.DTOs.ItemCarrito>>("Carrito")?.Sum(x => x.Cantidad) ?? 0;
            }
            @if (total > 0)
            {
                <span class="position-absolute top-0 start-60 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">@total</span>
            }
        </a>

        <a href="#" class="nav-mobile-item"><i class="bi bi-bag-check"></i><span>Pedidos</span></a>

        <div class="dropup nav-mobile-item">
            <a href="#" class="nav-mobile-item" data-bs-toggle="dropdown"><i class="bi bi-list"></i><span>Menú</span></a>
            <ul class="dropdown-menu shadow">
                <li class="px-3 py-2 border-bottom mb-2 bg-light"><strong>@User.Identity?.Name</strong></li>
                @if (User.IsInRole("Admin"))
                {
                    <li><a class="dropdown-item" asp-controller="Productos" asp-action="Index"><i class="bi bi-box-seam me-2"></i> Inventario</a></li>
                    <li><a class="dropdown-item" asp-controller="Vehiculos" asp-action="Index"><i class="bi bi-car-front me-2"></i> Vehículos</a></li>
                    <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-people me-2"></i> Personal</a></li>
                }
                <hr class="dropdown-divider">
                <li><partial name="_LoginPartial" /></li>
            </ul>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["AlertaCarrito"] != null)
        {
                <text>
                Swal.fire({
                    title: '¡Agregado!',
                    html: 'Añadiste <strong>@TempData["CantidadAgregada"]</strong> de:<br>@TempData["ProductoAgregado"]',
                    icon: 'success',
                    showCancelButton: true,
                    confirmButtonColor: '#2E86C1',
                    confirmButtonText: 'Ver Carrito'
                }).then((result) => { if (result.isConfirmed) { window.location.href = '@Url.Action("Index", "Carrito")'; } });
                </text>
        }
        @if (TempData["Error"] != null)
        {
                <text>
                Swal.fire({ icon: 'warning', title: 'Atención', text: '@TempData["Error"]' });
                </text>
        }
    </script>
</body>
</html>