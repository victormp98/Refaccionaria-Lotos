<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RefaccionariaWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RefaccionariaWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom shadow-sm mb-3 py-3">
            <div class="container-fluid px-4">

                <a class="navbar-brand fw-bold text-dark fs-4 me-5" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-gear-wide-connected text-primary"></i> Refaccionaria<span class="text-primary">Web</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">

                    <ul class="navbar-nav flex-grow-1 align-items-center">

                        <li class="nav-item me-3">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-grid-fill text-muted"></i> Catálogo
                            </a>
                        </li>

                        @if (User.IsInRole("Admin") || User.IsInRole("Almacen") || User.IsInRole("Mostrador"))
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Productos" asp-action="Index">
                                    <i class="bi bi-box-seam-fill text-warning"></i> Inventario
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link text-dark fw-semibold" asp-controller="Vehiculos" asp-action="Index">
                                    <i class="bi bi-car-front-fill text-secondary"></i> Catálogo Autos
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-outline-danger border-0 rounded-pill fw-bold px-3" asp-controller="Usuarios" asp-action="Index">
                                    <i class="bi bi-people-fill"></i> Personal
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center">

                        @if (!User.IsInRole("Admin") && !User.IsInRole("Almacen"))
                        {
                            <li class="nav-item me-4">
                                <a class="nav-link position-relative text-primary fw-bold" asp-controller="Carrito" asp-action="Index" style="font-size: 1.2rem;">
                                    <i class="bi bi-cart4 display-6 align-middle"></i>
                                    <span class="d-none d-lg-inline fs-6 ms-1 align-middle">Mi Carrito</span>
                                </a>
                            </li>
                        }

                        <div class="border-start ps-3 ms-2">
                            <partial name="_LoginPartial" />
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-4 bg-light">
        <div class="container text-center">
            &copy; 2026 - RefaccionariaWeb - Sistema de Gestión Integral
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // 1. ALERTA TIPO MERCADOLIBRE (DECISIÓN)
        @if (TempData["AlertaCarrito"] != null)
        {
                <text>
                Swal.fire({
                    title: '¡Agregado al carrito!',
                    html: 'Agregaste <strong>@TempData["CantidadAgregada"]</strong> pieza(s) de:<br>@TempData["ProductoAgregado"]',
                    icon: 'success',
                    showCancelButton: true,
                    confirmButtonColor: '#198754', // Verde
                    cancelButtonColor: '#6c757d',  // Gris
                    confirmButtonText: 'Ir al Carrito <i class="bi bi-cart-check"></i>',
                    cancelButtonText: 'Seguir Comprando',
                    reverseButtons: true // Pone el botón de "Seguir comprando" a la izquierda
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Si dice "Ir al carrito", lo mandamos
                        window.location.href = '@Url.Action("Index", "Carrito")';
                    }
                    // Si dice "Seguir comprando", no hacemos nada (se queda donde está)
                });
                </text>
        }

        // 2. ALERTAS DE ERROR NORMALES
        @if (TempData["Error"] != null)
        {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: '@TempData["Error"]',
                    position: 'center' // También al centro para que se vea bien
                });
                </text>
        }
    </script>
</body>
</html>