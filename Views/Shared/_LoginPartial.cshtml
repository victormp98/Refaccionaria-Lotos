@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav justify-content-end align-items-center flex-row">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-2 me-md-3 d-flex flex-column text-end d-none d-md-flex">
            <small class="text-muted" style="font-size: 0.7rem; line-height: 1;">Hola,</small>
            <strong class="text-dark" style="line-height: 1;">@User.Identity?.Name</strong>
        </li>
        <li class="nav-item">
            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3 shadow-sm d-flex align-items-center fw-bold">
                    <i class="bi bi-box-arrow-right me-1"></i>
                    <span class="d-none d-md-inline">Cerrar Sesión</span>
                    <span class="d-inline d-md-none">Salir</span>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item me-2">
            <a class="btn btn-outline-primary btn-sm rounded-pill px-3 fw-bold border-2" asp-controller="Account" asp-action="Register">Registro</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm fw-bold border-2" asp-controller="Account" asp-action="Login">Entrar</a>
        </li>
    }
</ul>