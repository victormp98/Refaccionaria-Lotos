@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-2 d-none d-md-block">
            <span class="text-muted small">Hola, <strong>@User.Identity?.Name</strong></span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill border-0">
                    <i class="bi bi-power"></i> <span class="d-none d-md-inline">Salir</span>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm" asp-controller="Account" asp-action="Login">
                Entrar
            </a>
        </li>
    }
</ul>