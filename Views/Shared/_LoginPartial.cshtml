@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center me-2">
            <span class="text-dark me-2 small fw-bold">
                <i class="bi bi-person-circle text-primary"></i> @User.Identity?.Name
            </span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                    <i class="bi bi-box-arrow-right"></i> Salir
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item me-2">
            <a class="btn btn-outline-primary btn-sm rounded-pill px-3" asp-controller="Account" asp-action="Register">
                Registro
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm" asp-controller="Account" asp-action="Login">
                <i class="bi bi-person-fill"></i> Iniciar Sesión
            </a>
        </li>
    }
</ul>