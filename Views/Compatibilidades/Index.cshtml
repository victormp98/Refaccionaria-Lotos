@model IEnumerable<RefaccionariaWeb.Models.Compatibilidad>

@{
    ViewData["Title"] = "Relaciones";
}

<div class="d-flex justify-content-between align-items-center flex-wrap mb-3 gap-2">
    <h1 class="mb-0 fs-2 fs-md-1"><i class="bi bi-diagram-3-fill text-primary"></i> Relaciones</h1>

    <div class="ms-auto ms-sm-0">
        <a asp-action="Create" class="btn btn-primary rounded-pill px-3 shadow-sm d-flex align-items-center">
            <i class="bi bi-link-45deg"></i>
            <span class="ms-1 d-none d-sm-inline">Nueva Relación</span>
            <span class="ms-1 d-inline d-sm-none">Nueva</span>
        </a>
    </div>
</div>

<div class="table-responsive d-none d-md-block shadow-sm rounded">
    <table class="table table-hover align-middle border">
        <thead class="table-light">
            <tr>
                <th class="ps-4">Pieza (Producto)</th>
                <th class="text-center"><i class="bi bi-arrow-left-right text-muted"></i></th>
                <th>Vehículo Compatible</th>
                <th class="text-end pe-4">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="ps-4">
                        <div class="fw-bold">@item.Producto.Nombre</div>
                        <small class="text-muted">@item.Producto.SKU</small>
                    </td>
                    <td class="text-center text-muted small">es compatible con</td>
                    <td>
                        <span class="badge bg-dark">@item.Vehiculo.Marca @item.Vehiculo.Modelo</span>
                        <small class="d-block text-muted">(@item.Vehiculo.AnioInicio - @item.Vehiculo.AnioFin)</small>
                    </td>
                    <td class="text-end pe-4">
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-block d-md-none">
    @foreach (var item in Model)
    {
        <div class="card mb-3 shadow-sm border-0 rounded-3">
            <div class="card-body position-relative">
                <div class="position-absolute top-50 start-50 translate-middle" style="opacity: 0.05;">
                    <i class="bi bi-link display-1"></i>
                </div>

                <div class="row text-center align-items-center g-2">
                    <div class="col-5 text-start">
                        <small class="text-muted d-block text-uppercase" style="font-size: 0.6rem;">Producto</small>
                        <span class="fw-bold text-primary">@item.Producto.Nombre</span>
                    </div>

                    <div class="col-2 text-center">
                        <i class="bi bi-arrow-right fs-4 text-secondary"></i>
                    </div>

                    <div class="col-5 text-end">
                        <small class="text-muted d-block text-uppercase" style="font-size: 0.6rem;">Vehículo</small>
                        <span class="fw-bold text-dark">@item.Vehiculo.Marca @item.Vehiculo.Modelo</span>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-3">
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm border-0 bg-light">
                        <i class="bi bi-trash"></i> Eliminar Relación
                    </a>
                </div>
            </div>
        </div>
    }
</div>