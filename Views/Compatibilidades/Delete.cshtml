@model RefaccionariaWeb.Models.Compatibilidad

@{
    ViewData["Title"] = "Eliminar Relación";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body text-center p-5">

                    <div class="mb-4 text-warning">
                        <i class="bi bi-link-45deg display-1 text-decoration-line-through"></i>
                    </div>

                    <h3 class="fw-bold text-dark">¿Desvincular Pieza?</h3>
                    <p class="text-muted">Estás a punto de eliminar la relación de compatibilidad.</p>

                    <div class="card bg-light border-0 my-4 p-3 rounded-3">
                        <div class="row align-items-center">
                            <div class="col-5 fw-bold text-primary text-end">
                                @Model.Producto.Nombre
                            </div>
                            <div class="col-2 text-muted">
                                <i class="bi bi-x-circle fs-4"></i>
                            </div>
                            <div class="col-5 fw-bold text-dark text-start">
                                @Model.Vehiculo.Marca @Model.Vehiculo.Modelo
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-light small text-muted">
                        Nota: Ni el producto ni el vehículo serán eliminados. Solo se rompe el enlace entre ellos.
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg rounded-pill shadow-sm">
                                <i class="bi bi-trash-fill"></i> Romper Vínculo
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>