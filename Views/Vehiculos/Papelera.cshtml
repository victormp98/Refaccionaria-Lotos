@model IEnumerable<RefaccionariaWeb.Models.Vehiculo>

@{
    ViewData["Title"] = "Papelera de Autos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-danger"><i class="bi bi-trash3-fill"></i> Autos Eliminados</h3>
    <a asp-action="Index" class="btn btn-secondary rounded-pill">
        <i class="bi bi-arrow-left"></i> Volver al Catálogo
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-success text-center shadow-sm">
        <h4>¡Papelera vacía!</h4>
        <p>No hay autos eliminados recientemente.</p>
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table align-middle border">
            <thead class="table-secondary">
                <tr>
                    <th>Vehículo</th>
                    <th>Motor</th>
                    <th class="text-end">Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <span class="text-decoration-line-through text-muted fw-bold">
                                @item.Marca @item.Modelo
                            </span>
                            <div class="small text-muted">(@item.AnioInicio - @item.AnioFin)</div>
                        </td>
                        <td class="text-muted">@item.Motor</td>
                        <td class="text-end">
                            <a asp-action="Restaurar" asp-route-id="@item.Id" class="btn btn-success btn-sm rounded-pill px-3">
                                <i class="bi bi-arrow-counterclockwise"></i> Restaurar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}