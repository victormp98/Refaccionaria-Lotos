@model IEnumerable<RefaccionariaWeb.Models.Vehiculo>

@{
    ViewData["Title"] = "Catálogo de Autos";
}

<div class="d-flex justify-content-between align-items-center flex-wrap mb-3 gap-2">
    <h1 class="mb-0 fs-2 fs-md-1"><i class="bi bi-car-front-fill text-primary"></i> Autos</h1>

    <div class="d-flex gap-2 ms-auto ms-sm-0">
        <a asp-action="Papelera" class="btn btn-outline-danger rounded-pill px-3 d-flex align-items-center">
            <i class="bi bi-trash"></i>
            <span class="ms-1 d-none d-sm-inline">Papelera</span>
        </a>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-3 shadow-sm d-flex align-items-center">
            <i class="bi bi-plus-lg"></i>
            <span class="ms-1 d-none d-sm-inline">Nuevo Auto</span>
            <span class="ms-1 d-inline d-sm-none">Nuevo</span>
        </a>
    </div>
</div>

<div class="table-responsive d-none d-md-block shadow-sm rounded">
    <table class="table table-hover align-middle border">
        <thead class="table-light">
            <tr>
                <th class="ps-4">Marca</th>
                <th>Modelo</th>
                <th>Años</th>
                <th>Motor</th>
                <th class="text-end pe-4">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="ps-4 fw-bold">@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>
                        <span class="badge bg-secondary">@item.AnioInicio - @item.AnioFin</span>
                    </td>
                    <td>@item.Motor</td>
                    <td class="text-end pe-4">
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary"><i class="bi bi-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-block d-md-none">
    @foreach (var item in Model)
    {
        <div class="card mb-3 shadow-sm border-0 rounded-3">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="fw-bold mb-0">@item.Marca @item.Modelo</h5>
                        <span class="text-muted small">Motor: @item.Motor</span>
                    </div>
                    <span class="badge bg-primary rounded-pill">@item.AnioInicio - @item.AnioFin</span>
                </div>

                <hr class="my-2" />

                <div class="d-grid gap-2 d-flex">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light flex-grow-1 text-primary btn-sm">
                        <i class="bi bi-pencil-fill"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light flex-grow-1 text-danger btn-sm">
                        <i class="bi bi-trash-fill"></i> Borrar
                    </a>
                </div>
            </div>
        </div>
    }
</div>