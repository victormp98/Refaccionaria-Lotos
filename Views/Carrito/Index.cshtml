@model List<RefaccionariaWeb.Models.DTOs.ItemCarrito>
@using RefaccionariaWeb.Extensions

@{
    ViewData["Title"] = "Tu Carrito de Compras";
    bool hayErrores = Model.Any(x => !x.EsValido);
}

<div class="container py-4 pb-5">
    @if (ViewBag.Alerta != null)
    {
        <div class="alert alert-warning border-0 shadow-sm rounded-4 mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @ViewBag.Alerta
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold h3 mb-0"><i class="bi bi-cart3 text-primary"></i> Mi Carrito</h1>
        <span class="badge bg-white text-dark border px-3 py-2 rounded-pill shadow-sm">
            @Model.Sum(x => x.Cantidad) artículos
        </span>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5 bg-white border rounded-4 shadow-sm">
            <i class="bi bi-cart-x display-1 text-muted opacity-25"></i>
            <h3 class="mt-3 fw-bold">Carrito vacío</h3>
            <p class="text-muted">No has agregado refacciones todavía.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-4">Ir al Catálogo</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="card border-0 shadow-sm rounded-4 mb-3 @(item.EsValido ? "" : "border-start border-danger border-4")">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-4 col-md-2">
                                    <img src="@item.ImagenUrl" class="img-fluid rounded-3 border" alt="@item.Nombre">
                                </div>
                                <div class="col-8 col-md-4">
                                    <h6 class="fw-bold mb-0">@item.Nombre</h6>
                                    <small class="text-success fw-bold">$@item.Precio.ToString("N2")</small>
                                    @if (!item.EsValido)
                                    {
                                        <div class="text-danger mt-1" style="font-size: 0.7rem;">
                                            <i class="bi bi-x-circle-fill"></i> @item.MensajeError
                                        </div>
                                    }
                                </div>

                                <div class="col-7 col-md-4 mt-3 mt-md-0 text-center">
                                    <div class="d-inline-flex align-items-center border rounded-pill p-1 bg-light">
                                        <a href="@Url.Action("ActualizarCantidad", "Carrito", new { id = item.ProductoId, cantidad = item.Cantidad - 1 })"
                                           class="btn btn-sm btn-white rounded-circle shadow-sm @(item.Cantidad <= 1 ? "disabled opacity-50" : "")">
                                            <i class="bi bi-dash"></i>
                                        </a>
                                        <span class="fw-bold px-3">@item.Cantidad</span>
                                        <a href="@Url.Action("ActualizarCantidad", "Carrito", new { id = item.ProductoId, cantidad = item.Cantidad + 1 })"
                                           class="btn btn-sm btn-white rounded-circle shadow-sm @(item.Cantidad >= item.StockMaximo ? "disabled opacity-50" : "")">
                                            <i class="bi bi-plus"></i>
                                        </a>
                                    </div>
                                    <div class="text-muted mt-1" style="font-size: 0.6rem;">Disponibles: @item.StockMaximo</div>
                                </div>

                                <div class="col-5 col-md-2 mt-3 mt-md-0 text-end">
                                    <div class="fw-bold text-dark">$@item.SubTotal.ToString("N2")</div>
                                    <a asp-action="Eliminar" asp-route-id="@item.ProductoId" class="text-danger text-decoration-none small">
                                        <i class="bi bi-trash"></i> Quitar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 80px;">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4 text-center">Resumen de Compra</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Productos</span>
                            <span class="fw-bold">$@Model.Sum(x => x.SubTotal).ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3 text-success fw-bold">
                            <span>Envío</span>
                            <span>¡Gratis!</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 fw-bold">Total</span>
                            <span class="h4 fw-bold text-primary">$@Model.Sum(x => x.SubTotal).ToString("N2")</span>
                        </div>
                        <div class="d-grid">
                            @if (hayErrores)
                            {
                                <button class="btn btn-secondary btn-lg rounded-pill disabled py-3" disabled>Revisar Carrito</button>
                            }
                            else
                            {
                                <a href="#" class="btn btn-success btn-lg rounded-pill shadow-sm py-3 fw-bold">Pagar ahora <i class="bi bi-shield-lock-fill ms-1"></i></a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>