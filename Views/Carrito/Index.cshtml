@model List<RefaccionariaWeb.Models.DTOs.ItemCarrito>

@{
    ViewData["Title"] = "Tu Carrito de Compras";
    bool hayErrores = Model.Any(x => !x.EsValido);
}

<div class="container py-5">
    @if (ViewBag.Alerta != null)
    {
        <div class="alert alert-warning border-0 shadow-sm mb-4 rounded-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill fs-4 me-3 text-warning"></i>
                <div>
                    <h5 class="alert-heading fw-bold mb-1">Aviso del Sistema</h5>
                    <p class="mb-0">@ViewBag.Alerta</p>
                </div>
            </div>
        </div>
    }

    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">Tienda</a></li>
                    <li class="breadcrumb-item active fw-bold text-primary" aria-current="page">Carrito</li>
                </ol>
            </nav>
            <h1 class="fw-bold mb-0 text-dark">
                <i class="bi bi-cart3 text-primary me-2"></i>Mi Carrito
                <span class="badge bg-light text-muted border ms-2 fs-6 fw-normal">@Model.Sum(x => x.Cantidad) Items</span>
            </h1>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-link text-decoration-none text-secondary d-none d-md-block">
            <i class="bi bi-chevron-left"></i> Continuar comprando
        </a>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5 bg-white border rounded-4 shadow-sm">
            <div class="py-5">
                <i class="bi bi-cart-x display-1 text-muted opacity-25"></i>
                <h3 class="mt-4 fw-bold text-dark">Tu carrito está vacío</h3>
                <p class="text-muted mb-4">¡Agrega algunas refacciones para empezar!</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 shadow">
                    Explorar Catálogo
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-body p-0">
                        @foreach (var item in Model)
                        {
                            <div class="p-4 border-bottom @(item.EsValido ? "" : "bg-danger bg-opacity-10")">
                                <div class="row align-items-center">
                                    <div class="col-4 col-md-2">
                                        <div class="position-relative">
                                            @if (!string.IsNullOrEmpty(item.ImagenUrl))
                                            {
                                                <img src="@item.ImagenUrl" class="img-fluid rounded-3 border shadow-sm" alt="@item.Nombre">
                                            }
                                            else
                                            {
                                                <div class="bg-light rounded-3 d-flex align-items-center justify-content-center border ratio ratio-1x1 text-muted">
                                                    <i class="bi bi-image fs-2"></i>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div class="col-8 col-md-5">
                                        <h5 class="fw-bold mb-1 text-dark">@item.Nombre</h5>
                                        <div class="text-success fw-bold mb-1">@item.Precio.ToString("c")</div>

                                        @if (!string.IsNullOrEmpty(item.MensajeError))
                                        {
                                            <div class="text-danger small mt-1">
                                                <i class="bi bi-exclamation-circle-fill"></i> @item.MensajeError
                                            </div>
                                        }
                                    </div>

                                    <div class="col-6 col-md-3 mt-3 mt-md-0 text-md-center">
                                        <label class="small text-muted text-uppercase fw-bold d-block mb-1" style="font-size: 0.65rem;">Cantidad</label>
                                        <div class="d-inline-flex align-items-center border rounded-pill px-3 py-1 bg-light">
                                            <span class="fw-bold px-2">@item.Cantidad</span>
                                        </div>
                                    </div>

                                    <div class="col-6 col-md-2 mt-3 mt-md-0 text-end">
                                        <div class="fw-bold text-dark fs-5 mb-1">@item.SubTotal.ToString("c")</div>
                                        <a asp-action="Eliminar" asp-route-id="@item.ProductoId" class="btn btn-sm btn-outline-danger border-0 rounded-circle p-2" title="Quitar">
                                            <i class="bi bi-trash3-fill"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm rounded-4 position-sticky" style="top: 2rem;">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-4">Resumen</h4>

                        <div class="d-flex justify-content-between mb-3 text-muted">
                            <span>Subtotal</span>
                            <span class="fw-bold text-dark">@Model.Sum(x => x.SubTotal).ToString("c")</span>
                        </div>

                        <div class="d-flex justify-content-between mb-3 text-muted">
                            <span>Envío</span>
                            <span class="text-success fw-bold">Gratis</span>
                        </div>

                        <hr class="my-4 opacity-50">

                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 fw-bold">Total</span>
                            <span class="h4 fw-bold text-primary">@Model.Sum(x => x.SubTotal).ToString("c")</span>
                        </div>

                        <div class="d-grid gap-2">
                            @if (hayErrores)
                            {
                                <button class="btn btn-secondary btn-lg rounded-pill disabled py-3" disabled>
                                    <i class="bi bi-lock-fill me-2"></i> Revisar productos
                                </button>
                                <p class="text-danger small text-center mt-2 fw-bold">Hay artículos sin stock disponible.</p>
                            }
                            else
                            {
                                <a href="#" class="btn btn-success btn-lg rounded-pill shadow-sm py-3 fw-bold">
                                    Pagar pedido <i class="bi bi-shield-lock-fill ms-2"></i>
                                </a>
                            }
                        </div>

                        <div class="text-center mt-4">
                            <div class="d-flex justify-content-center gap-3 opacity-50 fs-4">
                                <i class="bi bi-credit-card"></i>
                                <i class="bi bi-paypal"></i>
                                <i class="bi bi-truck"></i>
                            </div>
                            <p class="text-muted mt-2" style="font-size: 0.75rem;">
                                <i class="bi bi-patch-check-fill text-primary"></i> Compra 100% Protegida
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>