@model List<RefaccionariaWeb.Models.DTOs.ItemCarrito>

@{
    ViewData["Title"] = "Tu Carrito de Compras";
    bool hayErrores = Model.Any(x => !x.EsValido); // Detectamos si hay líos de stock
}

<div class="container py-5">

    @if (ViewBag.Alerta != null)
    {
        <div class="alert alert-warning border-start border-warning border-4 shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                <div>
                    <h5 class="alert-heading fw-bold mb-1">¡Atención! Hubo cambios en tu carrito</h5>
                    <p class="mb-0">@ViewBag.Alerta</p>
                </div>
            </div>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-0">
            <i class="bi bi-cart3"></i> Tu Carrito
            <span class="text-muted fs-4">(@Model.Sum(x => x.Cantidad) artículos)</span>
        </h1>

        @if (Model.Count > 0)
        {
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill d-none d-md-inline-block shadow-sm">
                <i class="bi bi-arrow-left"></i> Seguir Comprando
            </a>
        }
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5 bg-light rounded-4">
            <i class="bi bi-cart-x display-1 text-muted opacity-50"></i>
            <h3 class="mt-3 text-muted">Tu carrito está vacío</h3>
            <p class="mb-4">Parece que no has agregado refacciones aún.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm">
                <i class="bi bi-arrow-left"></i> Ir al Catálogo
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                    <div class="card-body p-0">

                        @foreach (var item in Model)
                        {
                            <div class="p-3 border-bottom @(item.EsValido ? "bg-white" : "bg-danger bg-opacity-10")">
                                <div class="row align-items-center">

                                    <div class="col-3 col-md-2">
                                        @if (!string.IsNullOrEmpty(item.ImagenUrl))
                                        {
                                            <img src="@item.ImagenUrl" class="img-fluid rounded-3 border" alt="@item.Nombre">
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded-3 d-flex align-items-center justify-content-center text-muted ratio ratio-1x1 border">
                                                <i class="bi bi-image"></i>
                                            </div>
                                        }
                                    </div>

                                    <div class="col-9 col-md-5">
                                        <h6 class="fw-bold mb-1 text-dark">@item.Nombre</h6>
                                        <div class="small text-muted mb-2">Precio unitario: @item.Precio.ToString("c")</div>

                                        @if (!string.IsNullOrEmpty(item.MensajeError))
                                        {
                                            <div class="badge bg-danger text-wrap mb-1">
                                                <i class="bi bi-exclamation-circle"></i> @item.MensajeError
                                            </div>
                                        }
                                    </div>

                                    <div class="col-6 col-md-3 text-md-center mt-3 mt-md-0">
                                        <div class="small text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Cantidad</div>
                                        <span class="fw-bold fs-5">@item.Cantidad</span>
                                    </div>

                                    <div class="col-6 col-md-2 text-end mt-3 mt-md-0">
                                        <div class="fw-bold text-primary mb-2">@item.SubTotal.ToString("c")</div>

                                        <a asp-action="Eliminar" asp-route-id="@item.ProductoId" class="btn btn-sm btn-outline-danger border-0 rounded-circle" title="Quitar del carrito">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="p-3 bg-light d-md-none text-center">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 rounded-pill">
                                <i class="bi bi-arrow-left"></i> Seguir Comprando
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow rounded-4 position-sticky" style="top: 2rem;">
                    <div class="card-header bg-white border-0 pt-4 pb-0">
                        <h5 class="fw-bold">Resumen del Pedido</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2 text-muted">
                            <span>Subtotal</span>
                            <span>@Model.Sum(x => x.SubTotal).ToString("c")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4 text-muted">
                            <span>Impuestos (Estimado)</span>
                            <span>$0.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <span class="h5 fw-bold">Total</span>
                            <span class="h4 fw-bold text-success">@Model.Sum(x => x.SubTotal).ToString("c")</span>
                        </div>

                        <div class="alert alert-info py-2 small border-0 bg-info bg-opacity-10 text-info-emphasis">
                            <i class="bi bi-info-circle-fill"></i>
                            <strong>Nota:</strong> Los artículos en tu carrito no están reservados. El stock se descuenta hasta completar el pago.
                        </div>

                        <div class="d-grid gap-2">
                            @if (hayErrores)
                            {
                                <button class="btn btn-secondary btn-lg rounded-pill disabled" disabled>
                                    <i class="bi bi-lock-fill"></i> Corrige el carrito para pagar
                                </button>
                                <small class="text-danger text-center fw-bold">
                                    Elimina los productos agotados para continuar.
                                </small>
                            }
                            else
                            {
                                <a href="#" class="btn btn-dark btn-lg rounded-pill shadow-sm">
                                    Proceder al Pago <i class="bi bi-credit-card-fill ms-2"></i>
                                </a>
                            }

                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill border shadow-sm mt-2">
                                Seguir Comprando
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>