@model IEnumerable<RefaccionariaWeb.Models.ViewModels.EditarUsuarioViewModel>

@{
    ViewData["Title"] = "Gestión de Personal";
}

<div class="d-flex justify-content-between align-items-center flex-wrap mb-4 gap-2">
    <h1 class="mb-0 fs-2 fs-md-1"><i class="bi bi-people-fill text-primary"></i> Equipo</h1>

    <div class="d-flex gap-2 ms-auto ms-sm-0">
        <a asp-action="Papelera" class="btn btn-outline-secondary rounded-pill px-3 d-flex align-items-center">
            <i class="bi bi-trash"></i>
            <span class="ms-1 d-none d-md-inline">Bloqueados</span>
            <span class="ms-1 d-inline d-md-none">Ver</span>
        </a>

        <a asp-action="Crear" class="btn btn-primary rounded-pill px-3 shadow-sm d-flex align-items-center">
            <i class="bi bi-person-plus-fill"></i>
            <span class="ms-1 d-none d-md-inline">Nuevo Empleado</span>
            <span class="ms-1 d-inline d-md-none">Nuevo</span>
        </a>
    </div>
</div>

<div class="card shadow-sm border-0 d-none d-md-block overflow-hidden rounded-3">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0 border-0">
            @* Encabezado estandarizado como el de Inventario *@
            <thead class="table-light border-bottom">
                <tr>
                    <th class="ps-4 py-3">Usuario / Email</th>
                    <th class="py-3">Rol Actual</th>
                    <th class="py-3">Estado</th>
                    <th class="text-end pe-5 py-3">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold">@item.Email</td>
                        <td>
                            @switch (item.RolSeleccionado)
                            {
                                case "Admin":
                                    <span class="badge bg-danger">ADMIN</span>
                                    break;
                                case "Mostrador":
                                    <span class="badge bg-success">VENTAS</span>
                                    break;
                                case "Almacen":
                                    <span class="badge bg-warning text-dark">ALMACÉN</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">@item.RolSeleccionado</span>
                                    break;
                            }
                        </td>
                        <td>
                            @if (item.EstaBloqueado)
                            {
                                <span class="text-danger fw-bold small"><i class="bi bi-lock-fill"></i> Bloqueado</span>
                            }
                            else
                            {
                                <span class="text-success fw-bold small"><i class="bi bi-check-circle-fill"></i> Activo</span>
                            }
                        </td>
                        <td class="text-end pe-5">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm">
                                <i class="bi bi-pencil-square"></i> Administrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-block d-md-none">
    @foreach (var item in Model)
    {
        <div class="card shadow-sm border-0 mb-3 rounded-4 overflow-hidden">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div class="overflow-hidden">
                        <h6 class="mb-0 text-truncate fw-bold text-dark">@item.Email</h6>
                    </div>
                    <span class="badge @(item.EstaBloqueado ? "bg-danger" : "bg-success") rounded-pill p-1">
                        <i class="bi @(item.EstaBloqueado ? "bi-lock-fill" : "bi-check-circle")"></i>
                    </span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3 pt-2 border-top">
                    <div>
                        @switch (item.RolSeleccionado)
                        {
                            case "Admin":
                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25">ADMIN</span>
                                break;
                            case "Mostrador":
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25">VENTAS</span>
                                break;
                            case "Almacen":
                                <span class="badge bg-warning bg-opacity-10 text-dark border border-warning border-opacity-25">ALMACÉN</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@item.RolSeleccionado</span>
                                break;
                        }
                    </div>

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary rounded-pill px-4 btn-sm shadow-sm">
                        <i class="bi bi-pencil-square"></i> Administrar
                    </a>
                </div>
            </div>
        </div>
    }
</div>