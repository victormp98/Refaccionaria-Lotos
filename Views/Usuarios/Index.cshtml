@model IEnumerable<RefaccionariaWeb.Models.ViewModels.EditarUsuarioViewModel>

@{
    ViewData["Title"] = "Gestión de Personal";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-people-fill"></i> Equipo de Trabajo</h1>

    <div>
        <a asp-action="Papelera" class="btn btn-outline-secondary rounded-pill me-2">
            <i class="bi bi-trash"></i> Ver Bloqueados
        </a>

        <a asp-action="Crear" class="btn btn-primary rounded-pill">
            <i class="bi bi-person-plus-fill"></i> Nuevo Empleado
        </a>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Usuario / Email</th>
                    <th>Rol Actual</th>
                    <th>Estado</th>
                    <th class="text-end pe-4">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold">@item.Email</td>
                        <td>
                            @if (item.RolSeleccionado == "Admin")
                            {
                                <span class="badge bg-danger">ADMIN</span>
                            }
                            else if (item.RolSeleccionado == "Mostrador")
                            {
                                <span class="badge bg-success">VENTAS</span>
                            }
                            else if (item.RolSeleccionado == "Almacen")
                            {
                                <span class="badge bg-warning text-dark">ALMACÉN</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.RolSeleccionado</span>
                            }
                        </td>
                        <td>
                            @if (item.EstaBloqueado)
                            {
                                <span class="text-danger fw-bold"><i class="bi bi-lock-fill"></i> Bloqueado</span>
                            }
                            else
                            {
                                <span class="text-success"><i class="bi bi-check-circle-fill"></i> Activo</span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                <i class="bi bi-pencil-square"></i> Administrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>