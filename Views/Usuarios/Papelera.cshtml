@model IEnumerable<RefaccionariaWeb.Models.ViewModels.EditarUsuarioViewModel>

@{
    ViewData["Title"] = "Usuarios Bloqueados";
}

<div class="d-flex justify-content-between align-items-center flex-wrap mb-4 gap-2">
    <h1 class="mb-0 fs-2 fs-md-1"><i class="bi bi-trash-fill text-danger"></i> Bloqueados</h1>
    <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-3">
        <i class="bi bi-arrow-left"></i> Volver al Equipo
    </a>
</div>

@* VISTA PARA PC *@
<div class="card shadow-sm border-0 d-none d-md-block overflow-hidden rounded-3">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0 border-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Usuario / Email</th>
                    <th>Rol que tenía</th>
                    <th class="text-end pe-4">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            <div class="fw-bold">@item.Email</div>
                            <small class="text-muted">ID: @item.Id.Substring(0, 8)...</small>
                        </td>
                        <td>
                            <span class="badge bg-secondary">@item.RolSeleccionado</span>
                        </td>
                        <td class="text-end pe-4">
                            <a asp-action="Desbloquear" asp-route-id="@item.Id" class="btn btn-sm btn-success rounded-pill px-3">
                                <i class="bi bi-unlock-fill"></i> Restaurar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@* VISTA PARA MÓVIL (TARJETAS) *@
<div class="d-block d-md-none">
    @foreach (var item in Model)
    {
        <div class="card shadow-sm border-0 mb-3 rounded-4 border-start border-danger border-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="overflow-hidden">
                        <h6 class="mb-0 text-truncate fw-bold">@item.Email</h6>
                        <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-25 mt-1">
                            @item.RolSeleccionado
                        </span>
                    </div>
                    <div class="bg-danger bg-opacity-10 p-2 rounded-circle">
                        <i class="bi bi-person-x-fill text-danger"></i>
                    </div>
                </div>

                <div class="d-grid mt-2">
                    <a asp-action="Desbloquear" asp-route-id="@item.Id" class="btn btn-success rounded-pill shadow-sm">
                        <i class="bi bi-unlock-fill"></i> Restaurar Acceso
                    </a>
                </div>
            </div>
        </div>
    }
</div>