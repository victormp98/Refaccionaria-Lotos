@model IEnumerable<RefaccionariaWeb.Models.ViewModels.EditarUsuarioViewModel>

@{
    ViewData["Title"] = "Papelera de Usuarios";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-danger"><i class="bi bi-trash-fill"></i> Usuarios Bloqueados</h1>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
        <i class="bi bi-arrow-left"></i> Volver a Activos
    </a>
</div>

<div class="alert alert-warning border-0 shadow-sm">
    <i class="bi bi-exclamation-triangle-fill"></i>
    Estos usuarios tienen el acceso denegado al sistema. Para reactivarlos, dale clic en "Restaurar / Editar" y desmarca la casilla de bloqueo.
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center p-5 text-muted">
                <i class="bi bi-recycle display-1"></i>
                <p class="mt-3">La papelera está vacía. No hay usuarios bloqueados.</p>
            </div>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Usuario / Email</th>
                        <th>Rol Anterior</th>
                        <th>Estado</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-muted text-decoration-line-through">@item.Email</td>
                            <td>
                                <span class="badge bg-secondary">@item.RolSeleccionado</span>
                            </td>
                            <td>
                                <span class="badge bg-danger">ACCESO DENEGADO</span>
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success rounded-pill px-3">
                                    <i class="bi bi-arrow-counterclockwise"></i> Restaurar / Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>