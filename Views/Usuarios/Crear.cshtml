@model RefaccionariaWeb.Models.ViewModels.CrearUsuarioViewModel

@{
    ViewData["Title"] = "Registrar Empleado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4">

                <div class="card-header bg-success text-white py-3 rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill"></i> Nuevo Empleado
                    </h4>
                </div>

                <div class="card-body p-4">

                    <div class="alert alert-light border small text-muted mb-4">
                        <i class="bi bi-info-circle-fill text-info"></i>
                        El empleado se creará con el rol de <strong>Mostrador</strong> por defecto.
                        Podrás cambiar su rol después en la opción "Administrar".
                    </div>

                    <form asp-action="Crear">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="bi bi-envelope"></i> Correo Electrónico
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="ejemplo@lotos.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-bold">
                                <i class="bi bi-key"></i> Contraseña Temporal
                            </label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="******" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="form-text">
                                Debe contener al menos una mayúscula, un número y un caracter especial (ej. 123*).
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm">
                                <i class="bi bi-check-lg"></i> Registrar Usuario
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                                Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}